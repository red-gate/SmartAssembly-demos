  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release DE|AnyCPU' ">
    <OutputPath>bin\Release DE\</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="RedGate.SmartAssembly.SmartExceptionsCore">
      <Version>*-*</Version>
    </PackageReference>
  </ItemGroup>

</Project>
