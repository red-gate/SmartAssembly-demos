    <OutputType>Library</OutputType>
    <UseWindowsForms>true</UseWindowsForms>

    <DefineConstants>US</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release FR|AnyCPU' ">
